# ============================================
# CONFIGURACIÓN SISTEMA SAAS WHATSAPP BOT
# Versión: 2.0 - WhatsApp Cloud API
# ============================================

# ============================================
# SEGURIDAD - ENCRIPTACIÓN
# ============================================
# Clave maestra para encriptar credenciales de clientes
# Generar con: node encryption-service.js generate-key
# ⚠️ NUNCA subir a Git o compartir
MASTER_ENCRYPTION_KEY=

# ============================================
# JWT - AUTENTICACIÓN
# ============================================
# Secret para tokens JWT del dashboard
# Generar con: openssl rand -hex 32
JWT_SECRET=

# ============================================
# SERVIDOR
# ============================================
PORT=3000
NODE_ENV=production

# URL pública del servidor (para webhooks)
# Ejemplo: https://tudominio.com
PUBLIC_URL=

# ============================================
# META CLOUD API - CONFIGURACIÓN GENERAL
# ============================================
# Versión de la API de Meta
META_API_VERSION=v21.0

# URL base de la API
META_API_BASE_URL=https://graph.facebook.com

# Token para verificar webhooks
# Generar con: node encryption-service.js generate-key
WEBHOOK_VERIFY_TOKEN=

# ============================================
# BASE DE DATOS
# ============================================
# Base de datos principal del sistema (multi-tenant)
DB_MAIN_PATH=./database/saas.db

# Directorio donde se guardarán las BD de cada cliente
DB_CLIENTS_DIR=./database/clients

# ============================================
# ARCHIVOS Y BACKUPS
# ============================================
# Directorio base para uploads de clientes
UPLOADS_DIR=./public/uploads

# Directorio base para backups
BACKUPS_DIR=./backups

# ============================================
# ADMINISTRADOR PRINCIPAL
# ============================================
# Credenciales del administrador del sistema SaaS
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Email para notificaciones del sistema
ADMIN_EMAIL=

# ============================================
# RATE LIMITING - LÍMITES GENERALES
# ============================================
# Límites por defecto para nuevos clientes
DEFAULT_RATE_LIMIT_HOUR=100
DEFAULT_RATE_LIMIT_DAY=1000

# Máximo de clientes activos
MAX_ACTIVE_CLIENTS=100

# ============================================
# BACKUPS AUTOMÁTICOS
# ============================================
# Activar backups automáticos (1 = sí, 0 = no)
AUTO_BACKUP_ENABLED=1

# Día de la semana para backup (0-6, donde 0 = Domingo)
BACKUP_DAY=6

# Hora del backup (formato 24h: 0-23)
BACKUP_HOUR=0

# Cantidad de backups a mantener por cliente
BACKUPS_TO_KEEP=4

# ============================================
# GOOGLE DRIVE (OPCIONAL)
# ============================================
# Si usarás Google Drive para backups
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ============================================
# MONITOREO Y LOGS
# ============================================
# Nivel de logs: error, warn, info, debug
LOG_LEVEL=info

# Guardar logs en archivo (1 = sí, 0 = no)
SAVE_LOGS_TO_FILE=1

# Directorio de logs
LOGS_DIR=./logs

# ============================================
# FACTURACIÓN (OPCIONAL - PARA FUTURO)
# ============================================
# Precio por defecto por cliente (en colones)
DEFAULT_PRICE_MONTHLY=30000

# Stripe (si implementas pagos automáticos)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# RECORDATORIOS
# ============================================
# Activar sistema de recordatorios (1 = sí, 0 = no)
REMINDERS_ENABLED=1

# Intervalo de verificación en minutos
REMINDERS_CHECK_INTERVAL=30

# ============================================
# NOTIFICACIONES
# ============================================
# Email para enviar notificaciones (usar SendGrid, SMTP, etc)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ============================================
# DESARROLLO
# ============================================
# Modo de prueba (no cobra, usa números de prueba)
TEST_MODE=0

# Mostrar errores detallados
DEBUG=0

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Genera las claves con: node encryption-service.js setup
# 2. Nunca subas este archivo con valores reales a Git
# 3. En producción, usa variables de entorno del servidor
# 4. Mantén backups de tus claves en un lugar seguro
# 5. Cambia las claves periódicamente por seguridad
